<h1>Listing patterns</h1>

<table>
  <thead>
    <tr>
      <th>Minor x</th>
      <th>Major x</th>
      <th>Minor y</th>
      <th>Major y</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patterns.each do |pattern| %>
      <tr>
        <td><%= pattern.minor_x %></td>
        <td><%= pattern.major_x %></td>
        <td><%= pattern.minor_y %></td>
        <td><%= pattern.major_y %></td>
        <td><%= link_to 'Show', pattern %></td>
        <td><%= link_to 'Edit', edit_pattern_path(pattern) %></td>
        <td><%= link_to 'Destroy', pattern, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pattern', new_pattern_path %>
